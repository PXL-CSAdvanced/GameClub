<Window x:Class="GameClub.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClub.UI"
        mc:Ignorable="d"
        Title="Login Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Margin="20" VerticalAlignment="Center" FontSize="30">Name</TextBlock>
        <TextBlock Margin="20" VerticalAlignment="Center" FontSize="30" Grid.Row="1">Password</TextBlock>
        <TextBox Name="NameTextBox" Margin="20" Grid.Row="0" Grid.Column="1" Height="50" FontSize="30"></TextBox>
        <PasswordBox Name="PasswordPasswordBox" Margin="20" Grid.Row="1" Grid.Column="1" Height="50" FontSize="30"></PasswordBox>
        <Button Grid.Column="1" Grid.Row="2" Margin="20" Height="50" IsDefault="True" Click="LoginButton_Click">Log In</Button>
    </Grid>
</Window>